<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="HotKeySection" type="Lab2.HotKeySection, Lab2"/>
  </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
  <appSettings>
    <add key="PluginsDirectory"  value="Plugins"/>
  </appSettings>
  <HotKeySection>
    <hotKeys>
        <hotKey command ="Save" gesture ="CTRL+S"/>
        <hotKey command ="Open" gesture ="CTRL+O"/>  
        <hotKey command ="Find" gesture ="CTRL+F"/>
        <hotKey command ="Close" gesture ="CTRL+Q"/>
    </hotKeys>
  </HotKeySection>
  
</configuration>